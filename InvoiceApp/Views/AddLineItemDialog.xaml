<Window x:Class="InvoiceApp.Views.AddLineItemDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Line Item" Height="450" Width="500"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <TextBlock Text="Add Line Item" 
                      FontSize="18" 
                      FontWeight="Bold" 
                      Margin="0,0,0,20"/>

            <Label Content="Select Product/Service (optional):" FontWeight="Bold"/>
            <ComboBox x:Name="ProductComboBox" 
                     Height="35"
                     DisplayMemberPath="Name"
                     SelectionChanged="ProductComboBox_SelectionChanged"/>

            <Label Content="Description: *" FontWeight="Bold" Margin="0,15,0,0"/>
            <TextBox x:Name="DescriptionTextBox" 
                    Height="60"
                    AcceptsReturn="True"
                    TextWrapping="Wrap"/>

            <Label Content="Quantity: *" FontWeight="Bold" Margin="0,15,0,0"/>
            <TextBox x:Name="QuantityTextBox" 
                    Height="35"
                    Text="1"/>

            <Label Content="Unit Price: *" FontWeight="Bold" Margin="0,15,0,0"/>
            <TextBox x:Name="UnitPriceTextBox" 
                    Height="35"
                    Text="0.00"/>

            <Label Content="Tax Rate (%):" FontWeight="Bold" Margin="0,15,0,0"/>
            <TextBox x:Name="TaxRateTextBox" 
                    Height="35"
                    Text="0"/>

            <TextBlock Text="* Required field" 
                      Foreground="Gray" 
                      FontSize="12" 
                      Margin="0,10,0,0"/>
        </StackPanel>

        <StackPanel Grid.Row="1" 
                   Orientation="Horizontal" 
                   HorizontalAlignment="Right" 
                   Margin="0,20,0,0">
            <Button Content="Add" 
                   Width="100" 
                   Height="35"
                   Background="#2ECC71"
                   Foreground="White"
                   BorderThickness="0"
                   Click="AddButton_Click" 
                   IsDefault="True"
                   Margin="0,0,10,0"/>
            <Button Content="Cancel" 
                   Width="100" 
                   Height="35"
                   Background="#95A5A6"
                   Foreground="White"
                   BorderThickness="0"
                   Click="CancelButton_Click" 
                   IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
<Window x:Class="InvoiceApp.Views.ChangePasswordDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Change Password" 
        Width="450"
        SizeToContent="Height"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                  Text="Change Password" 
                  FontSize="20" 
                  FontWeight="Bold"
                  Foreground="#2C3E50"
                  Margin="0,0,0,20"/>

        <!-- Form -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Label Grid.Row="0" Grid.Column="0" Content="Current Password: *" FontWeight="Bold"/>
            <PasswordBox Grid.Row="0" Grid.Column="1" 
                        x:Name="CurrentPasswordBox" 
                        Height="35"
                        Margin="0,0,0,10"/>

            <Label Grid.Row="1" Grid.Column="0" Content="New Password: *" FontWeight="Bold"/>
            <PasswordBox Grid.Row="1" Grid.Column="1" 
                        x:Name="NewPasswordBox" 
                        Height="35"
                        Margin="0,0,0,10"/>

            <Label Grid.Row="2" Grid.Column="0" Content="Confirm Password: *" FontWeight="Bold"/>
            <PasswordBox Grid.Row="2" Grid.Column="1" 
                        x:Name="ConfirmPasswordBox" 
                        Height="35"/>
        </Grid>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" 
                   Orientation="Horizontal" 
                   HorizontalAlignment="Right" 
                   Margin="0,20,0,0">
            <Button Content="🔒 Change Password" 
                   Width="150" 
                   Height="40"
                   Background="#2ECC71"
                   Foreground="White"
                   BorderThickness="0"
                   FontSize="14"
                   FontWeight="SemiBold"
                   Click="ChangeButton_Click" 
                   IsDefault="True"
                   Margin="0,0,10,0"/>
            <Button Content="Cancel" 
                   Width="100" 
                   Height="40"
                   Background="#95A5A6"
                   Foreground="White"
                   BorderThickness="0"
                   FontSize="14"
                   Click="CancelButton_Click" 
                   IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
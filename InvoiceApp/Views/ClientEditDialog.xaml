<Window x:Class="InvoiceApp.Views.ClientEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Client Details" Height="550" Width="500"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Form Fields -->
        <ScrollViewer Grid.Row="0">
            <StackPanel>
                <TextBlock Text="Client Information" 
                          FontSize="18" 
                          FontWeight="Bold" 
                          Margin="0,0,0,20"/>

                <Label Content="Company Name: *" FontWeight="Bold"/>
                <TextBox x:Name="CompanyNameTextBox" 
                        Height="30" 
                        FontSize="14"/>

                <Label Content="Contact Person:" FontWeight="Bold" Margin="0,10,0,0"/>
                <TextBox x:Name="ContactPersonTextBox" 
                        Height="30" 
                        FontSize="14"/>

                <Label Content="Email:" FontWeight="Bold" Margin="0,10,0,0"/>
                <TextBox x:Name="EmailTextBox" 
                        Height="30" 
                        FontSize="14"/>

                <Label Content="Phone:" FontWeight="Bold" Margin="0,10,0,0"/>
                <TextBox x:Name="PhoneTextBox" 
                        Height="30" 
                        FontSize="14"/>

                <Label Content="Billing Address:" FontWeight="Bold" Margin="0,10,0,0"/>
                <TextBox x:Name="BillingAddressTextBox" 
                        Height="80" 
                        FontSize="14"
                        AcceptsReturn="True"
                        TextWrapping="Wrap"
                        VerticalScrollBarVisibility="Auto"/>

                <Label Content="VAT Number:" FontWeight="Bold" Margin="0,10,0,0"/>
                <TextBox x:Name="VatNumberTextBox" 
                        Height="30" 
                        FontSize="14"/>

                <CheckBox x:Name="IsActiveCheckBox" 
                         Content="Active" 
                         IsChecked="True" 
                         Margin="0,15,0,0"
                         FontSize="14"/>

                <TextBlock Text="* Required field" 
                          Foreground="Gray" 
                          FontSize="12" 
                          Margin="0,10,0,0"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel Grid.Row="1" 
                   Orientation="Horizontal" 
                   HorizontalAlignment="Right" 
                   Margin="0,20,0,0">
            <Button Content="Save" 
                   Width="100" 
                   Height="35"
                   FontSize="14"
                   Background="#2ECC71"
                   Foreground="White"
                   BorderThickness="0"
                   Click="SaveButton_Click" 
                   IsDefault="True"
                   Margin="0,0,10,0"/>
            <Button Content="Cancel" 
                   Width="100" 
                   Height="35"
                   FontSize="14"
                   Background="#95A5A6"
                   Foreground="White"
                   BorderThickness="0"
                   Click="CancelButton_Click" 
                   IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
<Window x:Class="InvoiceApp.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Invoice App - Login" 
        Height="500" 
        Width="400"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True">

    <Border Background="#2C3E50" 
            CornerRadius="10"
            BorderThickness="0">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.5"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="120"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" 
                   Background="#34495E" 
                   CornerRadius="10,10,0,0">
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="📊" 
                              FontSize="48" 
                              HorizontalAlignment="Center"
                              Margin="0,10,0,0"/>
                    <TextBlock Text="Invoice App" 
                              FontSize="24" 
                              FontWeight="Bold"
                              Foreground="White"
                              HorizontalAlignment="Center"
                              Margin="0,10,0,0"/>
                </StackPanel>
            </Border>

            <!-- Login Form -->
            <StackPanel Grid.Row="1" 
                       Margin="40,30,40,40">

                <TextBlock Text="Username" 
                          Foreground="White" 
                          FontSize="14"
                          Margin="0,0,0,5"/>
                <TextBox x:Name="UsernameTextBox" 
                        Height="40"
                        FontSize="14"
                        Padding="10"
                        BorderThickness="0"
                        Background="White"
                        Margin="0,0,0,20"/>

                <TextBlock Text="Password" 
                          Foreground="White" 
                          FontSize="14"
                          Margin="0,0,0,5"/>
                <PasswordBox x:Name="PasswordBox" 
                            Height="40"
                            FontSize="14"
                            Padding="10"
                            BorderThickness="0"
                            Background="White"
                            Margin="0,0,0,10"/>

                <TextBlock x:Name="ErrorText" 
                          Foreground="#E74C3C" 
                          FontSize="12"
                          TextWrapping="Wrap"
                          Margin="0,0,0,20"
                          Visibility="Collapsed"/>

                <Button Content="LOGIN" 
                       Height="45"
                       FontSize="16"
                       FontWeight="Bold"
                       Background="#3498DB"
                       Foreground="White"
                       BorderThickness="0"
                       Cursor="Hand"
                       Click="LoginButton_Click"
                       Margin="0,0,0,10"/>

                <TextBlock HorizontalAlignment="Center"
                          Margin="0,20,0,0">
                    <TextBlock.Inlines>
                        <Run Text="Default login: " Foreground="#95A5A6" FontSize="11"/>
                        <Run Text="admin / admin123" Foreground="White" FontSize="11" FontWeight="SemiBold"/>
                    </TextBlock.Inlines>
                </TextBlock>
            </StackPanel>
        </Grid>
    </Border>
</Window>
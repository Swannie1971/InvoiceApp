<Window x:Class="InvoiceApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:InvoiceApp.Views"
        xmlns:viewModels="clr-namespace:InvoiceApp.ViewModels"
        mc:Ignorable="d"
        Title="{Binding Title}" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen" WindowState="Maximized">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Navigation Panel -->
        <Border Grid.Column="0" Background="#2C3E50" Padding="10">
            <StackPanel>
                <!-- User Info -->
                <Border Background="#1A252F" 
        Padding="10"
        Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock Text="👤" 
                  FontSize="24" 
                  HorizontalAlignment="Center"
                  Margin="0,5,0,5"/>
                        <TextBlock x:Name="CurrentUserText" 
                  Text="Admin User" 
                  Foreground="White" 
                  FontSize="13"
                  FontWeight="SemiBold"
                  HorizontalAlignment="Center"
                  TextAlignment="Center"/>
                        <TextBlock x:Name="UserRoleText" 
                  Text="Administrator" 
                  Foreground="#95A5A6" 
                  FontSize="11"
                  HorizontalAlignment="Center"
                  Margin="0,2,0,0"/>
                        <Separator Margin="0,20" Background="#7F8C8D"/>

                        <Button Content="🚪 Logout" 
       Command="{Binding LogoutCommand}"
       Background="#E74C3C"
       Foreground="White"
       BorderThickness="0"
       Padding="15,10"
       Margin="0,5"
       HorizontalContentAlignment="Left"/>
                    </StackPanel>
                </Border>
                <TextBlock Text="Invoice App" 
                          Foreground="White" 
                          FontSize="20" 
                          FontWeight="Bold" 
                          Margin="0,0,0,30"
                          TextAlignment="Center"/>

                <Button Content="Dashboard" 
                       Command="{Binding ShowDashboardCommand}"
                       Background="#34495E"
                       Foreground="White"
                       BorderThickness="0"
                       Padding="15,10"
                       Margin="0,5"
                       HorizontalContentAlignment="Left"/>

                <Button Content="Invoices" 
                       Command="{Binding ShowInvoicesCommand}"
                       Background="#34495E"
                       Foreground="White"
                       BorderThickness="0"
                       Padding="15,10"
                       Margin="0,5"
                       HorizontalContentAlignment="Left"/>

                <Button Content="Clients" 
                       Command="{Binding ShowClientsCommand}"
                       Background="#34495E"
                       Foreground="White"
                       BorderThickness="0"
                       Padding="15,10"
                       Margin="0,5"
                       HorizontalContentAlignment="Left"/>

                <Button Content="Products/Services" 
                       Command="{Binding ShowProductsCommand}"
                       Background="#34495E"
                       Foreground="White"
                       BorderThickness="0"
                       Padding="15,10"
                       Margin="0,5"
                       HorizontalContentAlignment="Left"/>

                <Button Content="Statements" 
                       Command="{Binding ShowStatementsCommand}"
                       Background="#34495E"
                       Foreground="White"
                       BorderThickness="0"
                       Padding="15,10"
                       Margin="0,5"
                       HorizontalContentAlignment="Left"/>
                <Button Content="📊 Reports" 
       Command="{Binding ShowReportsCommand}"
       Background="#34495E"
       Foreground="White"
       BorderThickness="0"
       Padding="15,10"
       Margin="0,5"
       HorizontalContentAlignment="Left"/>
                
                <Separator Margin="0,20" Background="#7F8C8D"/>

                <Button Content="Settings" 
                       Command="{Binding ShowSettingsCommand}"
                       Background="#34495E"
                       Foreground="White"
                       BorderThickness="0"
                       Padding="15,10"
                       Margin="0,5"
                       HorizontalContentAlignment="Left"/>
            </StackPanel>
        </Border>

        <!-- Content Area -->
        <Border Grid.Column="1" Background="White" Padding="20">
            <ContentControl Content="{Binding CurrentViewModel}">
                <ContentControl.Resources>
                    <DataTemplate DataType="{x:Type viewModels:DashboardViewModel}">
                        <views:DashboardView/>
                    </DataTemplate>
                    <DataTemplate DataType="{x:Type viewModels:InvoiceListViewModel}">
                        <views:InvoiceListView/>
                    </DataTemplate>
                    <DataTemplate DataType="{x:Type viewModels:ClientListViewModel}">
                        <views:ClientListView/>
                    </DataTemplate>
                    <DataTemplate DataType="{x:Type viewModels:ProductListViewModel}">
                        <views:ProductListView/>
                    </DataTemplate>
                    <DataTemplate DataType="{x:Type viewModels:StatementListViewModel}">
                        <views:StatementListView/>
                    </DataTemplate>
                    <DataTemplate DataType="{x:Type viewModels:SettingsViewModel}">
                        <views:SettingsView/>
                    </DataTemplate>
                    <DataTemplate DataType="{x:Type viewModels:ReportsViewModel}">
                        <views:ReportsView/>
                    </DataTemplate>
                </ContentControl.Resources>
            </ContentControl>
        </Border>
    </Grid>
</Window>
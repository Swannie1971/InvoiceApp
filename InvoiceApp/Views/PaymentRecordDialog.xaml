<Window x:Class="InvoiceApp.Views.PaymentRecordDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Record Payment" 
        Width="650"
        SizeToContent="Height"
        WindowStartupLocation="CenterScreen"
        MinHeight="500"
        Background="#F5F5F5">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Record Payment" 
                      FontSize="20" 
                      FontWeight="Bold"
                      Foreground="#2C3E50"/>
            <TextBlock x:Name="InvoiceInfoText" 
                      Text="Invoice: INV-0000" 
                      FontSize="14" 
                      Foreground="#7F8C8D"
                      Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Invoice Summary -->
        <Border Grid.Row="1" 
               Background="White" 
               BorderBrush="#E0E0E0" 
               BorderThickness="1"
               CornerRadius="5"
               Padding="15"
               Margin="0,0,0,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Invoice Total" 
                              FontSize="12" 
                              Foreground="#7F8C8D"/>
                    <TextBlock x:Name="TotalAmountText" 
                              Text="$0.00" 
                              FontSize="18"
                              FontWeight="Bold"
                              Foreground="#2C3E50"
                              Margin="0,5,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1">
                    <TextBlock Text="Amount Paid" 
                              FontSize="12" 
                              Foreground="#7F8C8D"/>
                    <TextBlock x:Name="PaidAmountText" 
                              Text="$0.00" 
                              FontSize="18"
                              FontWeight="Bold"
                              Foreground="#2ECC71"
                              Margin="0,5,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="2">
                    <TextBlock Text="Amount Due" 
                              FontSize="12" 
                              Foreground="#7F8C8D"/>
                    <TextBlock x:Name="DueAmountText" 
                              Text="$0.00" 
                              FontSize="18"
                              FontWeight="Bold"
                              Foreground="#E74C3C"
                              Margin="0,5,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Payment Form & History -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Payment Form -->
            <Border Grid.Column="0" 
                   Background="White" 
                   BorderBrush="#E0E0E0" 
                   BorderThickness="1"
                   CornerRadius="5"
                   Padding="15"
                   Margin="0,0,10,0">
                <StackPanel>
                    <TextBlock Text="New Payment" 
                              FontSize="14" 
                              FontWeight="Bold"
                              Margin="0,0,0,15"/>

                    <Label Content="Payment Amount: *" FontWeight="SemiBold"/>
                    <TextBox x:Name="PaymentAmountTextBox" 
                            Height="35"
                            FontSize="14"
                            Margin="0,0,0,10"/>

                    <Label Content="Payment Date: *" FontWeight="SemiBold"/>
                    <DatePicker x:Name="PaymentDatePicker" 
                               Height="35"
                               Margin="0,0,0,10"/>

                    <Label Content="Payment Method:" FontWeight="SemiBold"/>
                    <ComboBox x:Name="PaymentMethodComboBox" 
                             Height="35"
                             Margin="0,0,0,10">
                        <ComboBoxItem Content="Cash" IsSelected="True"/>
                        <ComboBoxItem Content="Bank Transfer"/>
                        <ComboBoxItem Content="Credit Card"/>
                        <ComboBoxItem Content="Debit Card"/>
                        <ComboBoxItem Content="Check"/>
                        <ComboBoxItem Content="Other"/>
                    </ComboBox>

                    <Label Content="Reference Number:" FontWeight="SemiBold"/>
                    <TextBox x:Name="ReferenceNumberTextBox" 
                            Height="35"
                            FontSize="14"
                            Margin="0,0,0,10"/>

                    <Label Content="Notes:" FontWeight="SemiBold"/>
                    <TextBox x:Name="NotesTextBox" 
                            Height="60"
                            AcceptsReturn="True"
                            TextWrapping="Wrap"
                            VerticalScrollBarVisibility="Auto"/>
                </StackPanel>
            </Border>

            <!-- Payment History -->
            <Border Grid.Column="1" 
                   Background="White" 
                   BorderBrush="#E0E0E0" 
                   BorderThickness="1"
                   CornerRadius="5"
                   Padding="15">
                <StackPanel>
                    <TextBlock Text="Payment History" 
                              FontSize="14" 
                              FontWeight="Bold"
                              Margin="0,0,0,15"/>

                    <DataGrid x:Name="PaymentHistoryGrid"
                             AutoGenerateColumns="False"
                             IsReadOnly="True"
                             GridLinesVisibility="None"
                             HeadersVisibility="Column"
                             Background="White"
                             RowBackground="White"
                             AlternatingRowBackground="#F8F9FA"
                             BorderThickness="0"
                             CanUserResizeRows="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Date" Binding="{Binding PaymentDate, StringFormat=d}" Width="80"/>
                            <DataGridTextColumn Header="Amount" Binding="{Binding Amount, StringFormat=C}" Width="90"/>
                            <DataGridTextColumn Header="Method" Binding="{Binding PaymentMethod}" Width="100"/>
                            <DataGridTextColumn Header="Reference" Binding="{Binding ReferenceNumber}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Buttons -->
        <StackPanel Grid.Row="3" 
                   Orientation="Horizontal" 
                   HorizontalAlignment="Right" 
                   Margin="0,20,0,0">
            <Button Content="💰 Record Payment" 
                   Width="150" 
                   Height="40"
                   Background="#2ECC71"
                   Foreground="White"
                   BorderThickness="0"
                   FontSize="14"
                   FontWeight="SemiBold"
                   Click="RecordPaymentButton_Click" 
                   IsDefault="True"
                   Margin="0,0,10,0"/>
            <Button Content="Close" 
                   Width="100" 
                   Height="40"
                   Background="#95A5A6"
                   Foreground="White"
                   BorderThickness="0"
                   FontSize="14"
                   Click="CloseButton_Click" 
                   IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
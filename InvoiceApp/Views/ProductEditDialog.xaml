<Window x:Class="InvoiceApp.Views.ProductEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Product/Service Details" Height="500" Width="500"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0">
            <StackPanel>
                <TextBlock Text="Product/Service Information" 
                          FontSize="18" 
                          FontWeight="Bold" 
                          Margin="0,0,0,20"/>

                <Label Content="Name: *" FontWeight="Bold"/>
                <TextBox x:Name="NameTextBox" 
                        Height="30" 
                        FontSize="14"/>

                <Label Content="Description:" FontWeight="Bold" Margin="0,10,0,0"/>
                <TextBox x:Name="DescriptionTextBox" 
                        Height="80" 
                        FontSize="14"
                        AcceptsReturn="True"
                        TextWrapping="Wrap"
                        VerticalScrollBarVisibility="Auto"/>

                <Label Content="SKU / Code:" FontWeight="Bold" Margin="0,10,0,0"/>
                <TextBox x:Name="SkuTextBox" 
                        Height="30" 
                        FontSize="14"/>

                <Label Content="Unit Price: *" FontWeight="Bold" Margin="0,10,0,0"/>
                <TextBox x:Name="UnitPriceTextBox" 
                        Height="30" 
                        FontSize="14"/>

                <Label Content="Tax Rate (%):" FontWeight="Bold" Margin="0,10,0,0"/>
                <TextBox x:Name="TaxRateTextBox" 
                        Height="30" 
                        FontSize="14"
                        Text="0"/>

                <CheckBox x:Name="IsActiveCheckBox" 
                         Content="Active" 
                         IsChecked="True" 
                         Margin="0,15,0,0"
                         FontSize="14"/>

                <TextBlock Text="* Required field" 
                          Foreground="Gray" 
                          FontSize="12" 
                          Margin="0,10,0,0"/>
            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="1" 
                   Orientation="Horizontal" 
                   HorizontalAlignment="Right" 
                   Margin="0,20,0,0">
            <Button Content="Save" 
                   Width="100" 
                   Height="35"
                   FontSize="14"
                   Background="#2ECC71"
                   Foreground="White"
                   BorderThickness="0"
                   Click="SaveButton_Click" 
                   IsDefault="True"
                   Margin="0,0,10,0"/>
            <Button Content="Cancel" 
                   Width="100" 
                   Height="35"
                   FontSize="14"
                   Background="#95A5A6"
                   Foreground="White"
                   BorderThickness="0"
                   Click="CancelButton_Click" 
                   IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
<Window x:Class="InvoiceApp.Views.StatementEmailDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Email Statement" 
        Width="600"
        SizeToContent="Height"
        WindowStartupLocation="CenterScreen"
        MinHeight="400"
        Background="#F5F5F5">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Email Statement" 
                      FontSize="18" 
                      FontWeight="Bold"
                      Foreground="#2C3E50"/>
            <TextBlock x:Name="StatementInfoText" 
                      Text="Statement for Client" 
                      FontSize="14" 
                      Foreground="#7F8C8D"
                      Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Email Fields -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Label Grid.Row="0" Grid.Column="0" Content="To:" FontWeight="Bold"/>
            <TextBox Grid.Row="0" Grid.Column="1" 
                    x:Name="ToEmailTextBox" 
                    Height="30"/>

            <Label Grid.Row="1" Grid.Column="0" Content="Subject:" FontWeight="Bold" Margin="0,10,0,0"/>
            <TextBox Grid.Row="1" Grid.Column="1" 
                    x:Name="SubjectTextBox" 
                    Height="30" 
                    Margin="0,10,0,0"/>
        </Grid>

        <!-- Email Body -->
        <StackPanel Grid.Row="2" Margin="0,15,0,0">
            <Label Content="Message:" FontWeight="Bold"/>
            <TextBox x:Name="BodyTextBox" 
                    Height="150"
                    AcceptsReturn="True"
                    TextWrapping="Wrap"
                    VerticalScrollBarVisibility="Auto"/>
        </StackPanel>

        <!-- Attachment Info -->
        <Border Grid.Row="3" 
               Background="White" 
               BorderBrush="#E0E0E0" 
               BorderThickness="1"
               CornerRadius="5"
               Padding="15"
               Margin="0,15,0,0">
            <StackPanel>
                <TextBlock Text="📎 Attachment" 
                          FontWeight="SemiBold"
                          Margin="0,0,0,5"/>
                <TextBlock x:Name="AttachmentText" 
                          Text="Statement.pdf" 
                          Foreground="#7F8C8D"
                          FontSize="12"/>
            </StackPanel>
        </Border>

        <!-- Buttons -->
        <StackPanel Grid.Row="4" 
                   Orientation="Horizontal" 
                   HorizontalAlignment="Right" 
                   Margin="0,20,0,0">
            <Button Content="📧 Send Email" 
                   Width="130" 
                   Height="40"
                   Background="#9B59B6"
                   Foreground="White"
                   BorderThickness="0"
                   FontSize="14"
                   FontWeight="SemiBold"
                   Click="SendButton_Click" 
                   IsDefault="True"
                   Margin="0,0,10,0"/>
            <Button Content="Cancel" 
                   Width="100" 
                   Height="40"
                   Background="#95A5A6"
                   Foreground="White"
                   BorderThickness="0"
                   FontSize="14"
                   Click="CancelButton_Click" 
                   IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
<Window x:Class="InvoiceApp.Views.StatementGenerateDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Generate Statement" Height="400" Width="500"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <TextBlock Text="Generate Client Statement" 
                      FontSize="18" 
                      FontWeight="Bold" 
                      Margin="0,0,0,20"/>

            <Label Content="Select Client: *" FontWeight="Bold"/>
            <ComboBox x:Name="ClientComboBox" 
                     Height="35"
                     FontSize="14"
                     DisplayMemberPath="CompanyName"
                     SelectedValuePath="Id"/>

            <Label Content="Start Date: *" FontWeight="Bold" Margin="0,15,0,0"/>
            <DatePicker x:Name="StartDatePicker" 
                       Height="35"
                       FontSize="14"/>

            <Label Content="End Date: *" FontWeight="Bold" Margin="0,15,0,0"/>
            <DatePicker x:Name="EndDatePicker" 
                       Height="35"
                       FontSize="14"/>

            <Label Content="Opening Balance:" FontWeight="Bold" Margin="0,15,0,0"/>
            <TextBox x:Name="OpeningBalanceTextBox" 
                    Height="35"
                    FontSize="14"
                    Text="0.00"/>

            <TextBlock Text="* Required field" 
                      Foreground="Gray" 
                      FontSize="12" 
                      Margin="0,15,0,0"/>
        </StackPanel>

        <StackPanel Grid.Row="1" 
                   Orientation="Horizontal" 
                   HorizontalAlignment="Right" 
                   Margin="0,20,0,0">
            <Button Content="Generate" 
                   Width="100" 
                   Height="35"
                   FontSize="14"
                   Background="#3498DB"
                   Foreground="White"
                   BorderThickness="0"
                   Click="GenerateButton_Click" 
                   IsDefault="True"
                   Margin="0,0,10,0"/>
            <Button Content="Cancel" 
                   Width="100" 
                   Height="35"
                   FontSize="14"
                   Background="#95A5A6"
                   Foreground="White"
                   BorderThickness="0"
                   Click="CancelButton_Click" 
                   IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
<Window x:Class="InvoiceApp.Views.StatementViewDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="View Statement" 
        Height="600" 
        Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Statement" 
                      FontSize="20" 
                      FontWeight="Bold"
                      Foreground="#2C3E50"/>
            <Grid Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Client: " FontWeight="SemiBold"/>
                <TextBlock Grid.Column="1" x:Name="ClientNameText" Text="Client Name"/>

                <TextBlock Grid.Column="2" Text="Period: " FontWeight="SemiBold" Margin="20,0,0,0"/>
                <TextBlock Grid.Column="3" x:Name="PeriodText" Text="Date Range"/>
            </Grid>

            <!-- Balance Summary -->
            <Border Background="White" 
                   BorderBrush="#E0E0E0" 
                   BorderThickness="1"
                   CornerRadius="5"
                   Padding="15"
                   Margin="0,15,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Opening Balance" 
                                  FontSize="12" 
                                  Foreground="#7F8C8D"/>
                        <TextBlock x:Name="OpeningBalanceText" 
                                  Text="$0.00" 
                                  FontSize="18"
                                  FontWeight="Bold"
                                  Foreground="#3498DB"
                                  Margin="0,5,0,0"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1">
                        <TextBlock Text="Closing Balance" 
                                  FontSize="12" 
                                  Foreground="#7F8C8D"/>
                        <TextBlock x:Name="ClosingBalanceText" 
                                  Text="$0.00" 
                                  FontSize="18"
                                  FontWeight="Bold"
                                  Foreground="#E74C3C"
                                  Margin="0,5,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>
        </StackPanel>

        <!-- Statement Items -->
        <Border Grid.Row="1" 
               Background="White" 
               BorderBrush="#E0E0E0" 
               BorderThickness="1"
               CornerRadius="5">
            <DataGrid x:Name="StatementItemsGrid"
                     AutoGenerateColumns="False"
                     IsReadOnly="True"
                     GridLinesVisibility="Horizontal"
                     HeadersVisibility="Column"
                     Background="White"
                     RowBackground="White"
                     AlternatingRowBackground="#F8F9FA"
                     BorderThickness="0"
                     CanUserResizeRows="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Date" Binding="{Binding Date, StringFormat=d}" Width="100"/>
                    <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*"/>
                    <DataGridTextColumn Header="Debit" Binding="{Binding Debit, StringFormat=C}" Width="120"/>
                    <DataGridTextColumn Header="Credit" Binding="{Binding Credit, StringFormat=C}" Width="120"/>
                    <DataGridTextColumn Header="Balance" Binding="{Binding Balance, StringFormat=C}" Width="120"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" 
                   Orientation="Horizontal" 
                   HorizontalAlignment="Right" 
                   Margin="0,20,0,0">
            <Button Content="📄 Export PDF" 
                   Width="120" 
                   Height="35"
                   Background="#3498DB"
                   Foreground="White"
                   BorderThickness="0"
                   Click="ExportPdfButton_Click"
                   Margin="0,0,10,0"/>
            <Button Content="📧 Email Statement" 
                   Width="140" 
                   Height="35"
                   Background="#9B59B6"
                   Foreground="White"
                   BorderThickness="0"
                   Click="EmailStatementButton_Click"
                   Margin="0,0,10,0"/>
            <Button Content="Close" 
                   Width="100" 
                   Height="35"
                   Background="#95A5A6"
                   Foreground="White"
                   BorderThickness="0"
                   Click="CloseButton_Click" 
                   IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>